# CFB Contrarian Predictor - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# The Odds API Key
# Sign up at: https://theoddsapi.com (500 free calls/month)
# Example: ODDS_API_KEY=your_32_character_api_key_here
ODDS_API_KEY=your_odds_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Performance Settings
CACHE_TTL=3600
# Cache time-to-live in seconds (default: 1 hour)

# Rate Limiting
RATE_LIMIT_ODDS=83
# The Odds API daily limit (default: 83 calls/day for 500/month)

RATE_LIMIT_ESPN=60
# ESPN API minute limit (default: 60 calls/minute)

# Factor Weights (must sum to 1.0)
COACHING_EDGE_WEIGHT=0.4
SITUATIONAL_CONTEXT_WEIGHT=0.4
MOMENTUM_FACTORS_WEIGHT=0.2

# Debug Mode
DEBUG=False
# Set to True for detailed logging and error traces

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================

# Testing Configuration
TEST_MODE=False
# Enable mock data for testing without API calls

# Performance Monitoring
ENABLE_MONITORING=True
# Track execution times and cache statistics

# Database Configuration (Future Use)
# DATABASE_URL=sqlite:///cfb_predictor.db
# DATABASE_POOL_SIZE=5

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. The Odds API key is REQUIRED for betting line data
# 2. ESPN API requires no key (public API with rate limiting)
# 3. All other settings have sensible defaults
# 4. Never commit your actual .env file to git
# 5. Restart the application after changing these values